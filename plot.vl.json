{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "name": "mon-data",
    "url": "mon-data.csv",
    "format": {
      "type": "csv"
    }
  },
  "repeat": ["cpu", "mem"],
  "columns": 1,
  "spec": {
    "width": 1200,
    "height": 400,
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "time",
        "type": "temporal"
      },
      "y": {
        "aggregate": "sum",
        "field": {
          "repeat": "repeat"
        }
      },
      "color": {
        "field": "name",
        "sort": {
          "op": "sum",
          "field": "mem",
          "order": "descending"
        }
      }
    }
  }
}
